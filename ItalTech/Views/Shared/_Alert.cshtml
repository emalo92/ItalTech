<div id="alertId" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="titolo1Id" class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="testo1Id" class="modal-body">
            </div>
        </div>
    </div>
</div>

<script>
    function MioAlert(titolo, testo)
    {
        $("#titolo1Id").html(titolo);
        $("#testo1Id").html(testo);
        $("#alertId").modal("show");
            
    }
</script>
