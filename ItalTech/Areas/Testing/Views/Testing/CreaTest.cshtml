@using ItalTech.Areas.Testing.Models
@model Test

<h3 class="text-center text-secondary">Inserisci nuovo Test</h3>

<section class="bg-light">
    <div class="container">
        <form id="idFormTest" class="form-group" asp-action="NuovoTest" method="post">
            <div class="row mb-3">
                <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                    <label asp-for="Codice">Codice Test</label>
                    <input id="idInputCodiceTest" type="text" class="form-control" asp-for="Codice" readonly />
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                    <label asp-for="Tipo">Nome Test</label>
                    <input id="idInputNomeTest" type="text" class="form-control" asp-for="Tipo" />
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                    <label asp-for="Operatore">Operatore</label>
                    <input id="idInputOperatore" type="text" class="form-control" asp-for="Operatore" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                    <label asp-for="Descrizione"></label>
                    <textarea class="form-control" id="idInputDescrizione" rows="3" asp-for="Descrizione"></textarea>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 text-right">
                        <input class="btn btn-info" type="button" value="Salva" onclick="salvaTest()" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script type="text/javascript">
    function salvaTest() {
        document.getElementById("idFormTest").submit();
    }
</script>