@using ItalTech.Areas.Progettazione.Models;

@model InputRicercaRichiesteProgetti

@{
    var listaRichiesteProgetti = (List<RichiestaProgetto>)ViewBag.ListaRichiesteProgetti; @*!= null ? ViewBag.ListaRichiesteProgetti : null;*@
}

<section class="bg-light">
    <div class="container">
        <form class="form-group" asp-action="RichiesteProgetto" method="post">
            <div class="row mb-3">
                <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                    <label asp-for="Codice"></label>
                    <input type="number" class="form-control" asp-for="Codice" value="0" />
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                    <label asp-for="CodiceProgetto"></label>
                    <input type="text" class="form-control" asp-for="CodiceProgetto" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                    <label asp-for="Budget"></label>
                    <input type="text" class="form-control" asp-for="Budget" />
                </div>
                <div class="row mb-3">
                    <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                        <label asp-for="Tipo"></label>
                        <input type="text" class="form-control" asp-for="Tipo" />
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                        <label asp-for="Operatore"></label>
                        <input type="text" class="form-control" asp-for="Operatore" />
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-12 form-group">
                        <label asp-for="Cliente"></label>
                        <input type="text" class="form-control" asp-for="Cliente" />
                    </div>
                </div>
            </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 text-right">
                        <input class="btn btn-info" type="submit" value="Cerca" />
                    </div>
                </div>
        </form>
    </div>
</section>
@if (listaRichiesteProgetti != null)
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Codice</th>
                <th>Codice Progetto</th>
                <th>Descrizione</th>
                <th>Budget</th>
                <th>Esito Studio</th>                
                <th>Tipo</th>
                <th>Cliente</th>
                <th>Operatore</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var elem in listaRichiesteProgetti)
                {
                    <tr>
                        <td>
                            <label class="control-label">@elem.Codice</label>
                        </td>
                        <td>
                            <label class="control-label">@elem.CodiceProgetto)</label>
                        </td>
                        <td>
                            <label class="control-label">@elem.Budget</label>
                        
                        <td>
                            <label class="control-label">@elem.Tipo</label>
                        </td>
                        <td>
                            <label class="control-label">@elem.Cliente</label>
                        </td>
                        <td>
                            <label class="control-label">@elem.Operatore</label>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
}