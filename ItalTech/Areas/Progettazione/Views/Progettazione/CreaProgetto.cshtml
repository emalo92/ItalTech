@using ItalTech.Areas.Progettazione.Models
@model Progetto

<h3 class="text-center text-secondary">Crea Nuovo Progetto</h3>

<section class="bg-light">
    <div class="container">
        <form class="form-group" asp-action="CreaProgetto" method="post">
            <partial name="_FormInputProgetto" model="@Model" />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 text-right">
                    <input class="btn btn-info" type="submit" value="Salva" />
                </div>
            </div>
        </form>
    </div>
</section>